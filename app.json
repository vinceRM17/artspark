{
  "expo": {
    "name": "ArtSpark",
    "slug": "artspark",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "artspark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFF8F0"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.artspark.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "ArtSpark needs camera access so you can photograph your artwork and add it to your portfolio.",
        "NSPhotoLibraryUsageDescription": "ArtSpark needs photo library access so you can select artwork photos to add to your portfolio.",
        "NSPhotoLibraryAddUsageDescription": "ArtSpark needs permission to save share cards to your photo library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFF8F0"
      },
      "package": "com.artspark.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.SCHEDULE_EXACT_ALARM"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "@react-native-community/datetimepicker",
      "expo-notifications"
    ]
  }
}
